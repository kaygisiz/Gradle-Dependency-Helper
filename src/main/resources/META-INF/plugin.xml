<idea-plugin>
    <id>com.kaygisiz.gradlehelper</id>
    <name>Gradle Dependency Helper</name>
    <vendor email="voidideas@gmail.com" url="https://github.com/kaygisiz/Gradle-Dependency-Helper">Void Ideas</vendor>

    <description><![CDATA[
      Gradle Dependency Helper helps you to find and add external dependencies then sync project from anywhere in project.<br>
    ]]></description>

    <depends>com.intellij.modules.all</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="SearchAction" class="action.SearchAction" text="Add Dependency to Gradle...">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>